{
  "name": "movie-watchlist-backend",
  "version": "1.0.0",
  "description": "Backend for Movie Watchlist & Recommendation System",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npx prisma generate && tsc",
    "start": "npx prisma db push && node dist/index.js",
