    "axios": "^1.7.9",
    "@prisma/client": "^5.7.1",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "prisma": "^5.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
