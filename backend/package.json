    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "backfill": "npx ts-node scripts/backfillMovies.ts"
  },
  "keywords": ["movie", "watchlist", "recommendations"],
  "author": "",
